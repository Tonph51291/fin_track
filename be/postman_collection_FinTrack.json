{
  "info": {
    "_postman_id": "fintrack-collection-001",
    "name": "FinTrack API - Local",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection to test FinTrack backend endpoints (import into Postman). Set baseUrl to http://localhost:3000/api and jwt variable after login."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api" },
    { "key": "jwt", "value": "" }
  ],
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Register (POST /users/register)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nguyen Van A\",\n  \"email\": \"a@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/users/register", "host": ["{{baseUrl}}"], "path": ["users","register"] }
          }
        },
        {
          "name": "Login (POST /users/login)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"a@example.com\",\n  \"password\": \"password123\"\n}" },
            "url": { "raw": "{{baseUrl}}/users/login", "host": ["{{baseUrl}}"], "path": ["users","login"] }
          }
        },
        {
          "name": "Get user (GET /users/:id)",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
            "url": { "raw": "{{baseUrl}}/users/:id", "host": ["{{baseUrl}}"], "path": ["users",":id"] }
          }
        },
        {
          "name": "Update user (PUT /users/:id)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{jwt}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Nguyen Van B\",\n  \"email\": \"b@example.com\"\n}" },
            "url": { "raw": "{{baseUrl}}/users/:id", "host": ["{{baseUrl}}"], "path": ["users",":id"] }
          }
        },
        {
          "name": "Delete user (DELETE /users/:id)",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
            "url": { "raw": "{{baseUrl}}/users/:id", "host": ["{{baseUrl}}"], "path": ["users",":id"] }
          }
        }
      ]
    },
    {
      "name": "Salaries",
      "item": [
        {
          "name": "Add salary (POST /salaries)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"userId\": \"USER_ID_HERE\",\n  \"month\": 10,\n  \"year\": 2025,\n  \"amount\": 15000000,\n  \"note\": \"October salary\"\n}" },
            "url": { "raw": "{{baseUrl}}/salaries", "host": ["{{baseUrl}}"], "path": ["salaries"] }
          }
        },
        {
          "name": "Get salaries by user (GET /salaries/user/:userId)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/salaries/user/:userId", "host": ["{{baseUrl}}"], "path": ["salaries","user",":userId"] } }
        },
        {
          "name": "Get salary for month (GET /salaries/user/:userId/:month/:year)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/salaries/user/:userId/:month/:year", "host": ["{{baseUrl}}"], "path": ["salaries","user",":userId",":month",":year"] } }
        },
        {
          "name": "Update salary (PUT /salaries/:id)",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"amount\": 16000000,\n  \"note\": \"Adjusted\"\n}" },
            "url": { "raw": "{{baseUrl}}/salaries/:id", "host": ["{{baseUrl}}"], "path": ["salaries",":id"] }
          }
        },
        {
          "name": "Delete salary (DELETE /salaries/:id)",
          "request": { "method": "DELETE", "url": { "raw": "{{baseUrl}}/salaries/:id", "host": ["{{baseUrl}}"], "path": ["salaries",":id"] } }
        }
      ]
    },
    {
      "name": "Expenses",
      "item": [
        {
          "name": "Add expense (POST /expenses)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"userId\": \"USER_ID_HERE\",\n  \"categoryId\": \"CAT_ID_HERE\",\n  \"amount\": 250000,\n  \"date\": \"2025-10-05\",\n  \"description\": \"Groceries\"\n}" },
            "url": { "raw": "{{baseUrl}}/expenses", "host": ["{{baseUrl}}"], "path": ["expenses"] }
          }
        },
        {
          "name": "Get expenses by user (GET /expenses/user/:userId)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/expenses/user/:userId", "host": ["{{baseUrl}}"], "path": ["expenses","user",":userId"] } }
        },
        {
          "name": "Get expenses by month (GET /expenses/user/:userId/:month/:year)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/expenses/user/:userId/:month/:year", "host": ["{{baseUrl}}"], "path": ["expenses","user",":userId",":month",":year"] } }
        },
        {
          "name": "Summary (GET /expenses/summary/:userId/:month/:year)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/expenses/summary/:userId/:month/:year", "host": ["{{baseUrl}}"], "path": ["expenses","summary",":userId",":month",":year"] } }
        },
        {
          "name": "Update expense (PUT /expenses/:id)",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"amount\": 300000,\n  \"description\": \"Groceries - weekly\"\n}" },
            "url": { "raw": "{{baseUrl}}/expenses/:id", "host": ["{{baseUrl}}"], "path": ["expenses",":id"] }
          }
        },
        {
          "name": "Delete expense (DELETE /expenses/:id)",
          "request": { "method": "DELETE", "url": { "raw": "{{baseUrl}}/expenses/:id", "host": ["{{baseUrl}}"], "path": ["expenses",":id"] } }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Add category (POST /categories)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Food\",\n  \"type\": \"expense\",\n  \"userId\": \"USER_ID_HERE\"\n}" },
            "url": { "raw": "{{baseUrl}}/categories", "host": ["{{baseUrl}}"], "path": ["categories"] }
          }
        },
        {
          "name": "Get categories by user (GET /categories/user/:userId)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/categories/user/:userId", "host": ["{{baseUrl}}"], "path": ["categories","user",":userId"] } }
        },
        {
          "name": "Update category (PUT /categories/:id)",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Eating Out\"\n}" },
            "url": { "raw": "{{baseUrl}}/categories/:id", "host": ["{{baseUrl}}"], "path": ["categories",":id"] }
          }
        },
        {
          "name": "Delete category (DELETE /categories/:id)",
          "request": { "method": "DELETE", "url": { "raw": "{{baseUrl}}/categories/:id", "host": ["{{baseUrl}}"], "path": ["categories",":id"] } }
        }
      ]
    }
  ]
}
